<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>user profile</h1>
    <p> Bonjour {{ user.email }} </p>
    <form action="/user/signup" method="post">
      <div class="form-groupe">
        <label for="nom">nom</label>
        <input type="text" name="nom" value="{{ user.nom }}" id="nom" class="form-control">
      </div>
      <div class="form-groupe">
        <label for="prenom">prenom</label>
        <input type="string" name="prenom" id="prenom" value="{{ user.prenom }}" class="form-control">
      </div>
      <div class="form-groupe">
        <label for="adresse">adresse</label>
        <input type="adresse" name="adresse" id="adresse" value="{{ user.adresse }}" class="form-control">
      </div>
      <div class="form-groupe">
        <label for="codePostal">code postal</label>
        <input type="string" name="codePostal" id="codePostal" value = "{{user.codePostal}}"  class="form-control">
      </div>
      <div class="form-groupe">
        <label for="telephone">téléphone</label>
        <input type="tel" name="telephone" id="telephone" class="form-control">
      </div>
      <div class="form-groupe">
        <label for="email">email</label>
        <input type="email" name="email" id="email" class="form-control">
      </div>
      <div class="form-groupe">
        <label for="password">password</label>
        <input type="password" name="password" id="password" class="form-control">
      </div>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">
      <button type="submit" class="btn btn-primary">Continuer</button>
    </form>
  </div>
</div>
